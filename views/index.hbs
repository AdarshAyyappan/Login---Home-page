 <section>
    <div class="container mt-5 ">
      <div class="row">
       {{#each car}}
        <div class="col-md-4 mb-5 d-flex  justify-content-between ">
          <div class="card " style="width: 40rem; height: 35rem;">
            <img src="{{this.image}}" class="card-img-top" width="auto" height="200rem">
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.description}}</p>
              <a href="#" class="btn btn-primary">Book your test ride</a>
            </div>
          </div>
        </div>
       {{/each}}
      </div>
    </div>
  </section>